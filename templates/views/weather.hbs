<!doctype html>
<html lang="en">
  <head>
    {{>header}}
  </head>
  <body>
    {{>navbar}}
<div class="container-fluid main_header my-3">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
           <div class="main_content">
           <form class="temp_form">
                <input type="text" class="form-control" id="cityName" placeholder="Enter City Name" autocomplete="off">
                <button type="submit" id="submitBtn" value="search" class="btn btn-primary ">Submit</button>
            </form>
           </div>
           <div class="tempInfo">
            <div class="top_layer">
                <p id="day">Tuesday</p>
                <p id="today_data">13 OCT</p>
            </div>
            <div class="main_layer">
                <p id="city_name">Get Output</p>
                <div class="middle_layer data_hide">
                    <p id="temp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                    <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                </div>
            </div>
           </div>
        </div>
    </div>
</div>
  {{>footer}}
  
    <script src="/js/main.js"></script>
</body>
</html>